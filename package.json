{
  "name": "kompanero-tracking",
  "version": "1.0.0",
  "description": "Kompanero Order Tracking Dashboard",
  "main": "main.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "electron": "electron .",
    "electron-dev": "NODE_ENV=development electron .",
    "prebuild": "node scripts/prepare-chrome.js",
    "build": "npm run prebuild && electron-builder",
    "build:win": "npm run prebuild && electron-builder --win --dir",
    "build:win:portable": "npm run prebuild && electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "postinstall": "npx puppeteer browsers install chrome"
  },
  "keywords": [
    "tracking",
    "shopify",
    "courier",
    "electron",
    "desktop"
  ],
  "author": "Kompanero",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.0",
    "body-parser": "^1.20.2",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "puppeteer": "^24.15.0",
    "nodemailer": "^6.9.9"
  },
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "fs-extra": "^11.3.2"
  },
  "build": {
    "appId": "com.kompanero.tracking",
    "productName": "Kompanero Tracking",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "server.js",
      "public/**/*",
      "scripts/**/*",
      "utils/**/*",
      "node_modules/**/*",
      "!node_modules/.cache/**/*",
      "chrome-bundle/**/*",
      "logo.png"
    ],
    "asarUnpack": [
      "node_modules/puppeteer/.local-chromium/**/*"
    ],
    "extraResources": [
      {
        "from": "logo.png",
        "to": "logo.png"
      },
      {
        "from": "chrome-bundle",
        "to": "chrome"
      },
      {
        "from": ".env",
        "to": ".env"
      }
    ],
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "logo.ico",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "logo.png",
      "category": "public.app-category.business",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "logo.png",
      "category": "Office",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Kompanero Tracking",
      "installerIcon": "logo.png",
      "uninstallerIcon": "logo.png",
      "installerHeaderIcon": "logo.png"
    },
    "portable": {
      "artifactName": "${productName}-${version}-Portable.${ext}"
    }
  }
}
